<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>jjm-soft.Microsoft.Extensions.Logging.Helpers.SignKey.snk</AssemblyOriginatorKeyFile>
    <PackageId>jjm-soft.Microsoft.Extensions.Logging.Helpers</PackageId>
    <Title>jjm-soft.Microsoft.Extensions.Logging.Helpers</Title>
    <Version>1.0.0</Version>
    <Authors>Jonas Merkle [JJM] </Authors>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Description>A collection of helper functions for the Microsoft logging tool.</Description>
    <Copyright>Â© by Jonas Merkle [JJM], 2023.</Copyright>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryType>git</RepositoryType>
    <PackageProjectUrl>https://github.com/jonas-merkle/Microsoft.Extensions.Logging.Helpers</PackageProjectUrl>
    <RepositoryUrl>https://github.com/jonas-merkle/Microsoft.Extensions.Logging.Helpers.git</RepositoryUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="jjm-soft.Microsoft.Extensions.Logging.Abstractions" Version="7.0.0" />
  </ItemGroup>

</Project>
